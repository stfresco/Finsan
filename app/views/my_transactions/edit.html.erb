    <%= c.input :amount%>
    <%= c.input :method%>
    <%= c.input :description%>
    <%= c.input :date, as: :string,
            input_html: { data: { controller: "datepicker" } }%>
    <%=c.submit data: {check_balance_target: "submit"}%>
