<%= turbo_frame_tag :transaction do %>
  <div class="container mt-4">
    <div class="class="transaction-details" style="flex: 1; padding: 20px; background-color: white; box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.1); border-radius: 10px;"">
      <div class="card-body p-4">
        <h4 class="card-title text-success text-center mb-3">Detalles de la Transacción</h4>
        <div class="mb-3">
          <p class="card-text">
            <strong class="text-success">Categoría:</strong>
            <span class="text-dark"><%= @transaction.category %></span>
          </p>
        </div>
        <div class="mb-3">
          <p class="card-text">
            <strong class="text-success">Monto:</strong>
            <span class="text-dark">$ <%= number_to_currency(@transaction.amount, unit: "", delimiter: ",") %></span>
          </p>
        </div>
        <div class="mb-3">
          <p class="card-text">
            <strong class="text-success">Fecha:</strong>
            <span class="text-dark"><%= @transaction.date.strftime("%d-%m-%Y") %></span>
          </p>
        </div>
        <div class="mb-3">
          <p class="card-text">
            <strong class="text-success">Tipo de Transacción:</strong>
            <span class="badge <%= @transaction.mytransaction_type == 'Egreso' ? 'bg-danger' : 'bg-success' %>">
              <%= @transaction.mytransaction_type %>
            </span>
          </p>
        </div>

         <div class="d-flex flex-wrap gap-2 justify-content-center">
          <%= link_to account_path(@account),
              class: "btn btn-outline-primary d-flex align-items-center",
              data: { bs_toggle: "tooltip", turbo: "false" },
              title: "Regresar a Cuenta" do %>
            <i class="fa-solid fa-arrow-left me-2"></i>
          <% end %>
        </div>

      </div>
    </div>
  </div>
<% end %>
