<div class="container w-25 border shadow mt-5 p-3">
   <h2 class="text-center "><strong>Edita tu objetivo! </strong>🧑🏼‍💻</h2>
<%= simple_form_for @goal do |c| %>
    <%= c.input :title%>
    <%= c.input :description%>
    <%= c.input :status%>
     <%= c.input :amount%>
    <%= c.input :start_date, as: :string,
            input_html: { data: { controller: "datepicker" } }%>
    <%= c.input :finish_date, as: :string,
            input_html: { data: { controller: "datepicker" } }%>
     <%=c.submit %>
 <% end %>
</div>
