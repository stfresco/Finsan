<div class="container w-25 border shadow mt-5 p-3">
   <h2 class="text-center "><strong>Crea tu objetivo! 📈🧑🏼‍💻 </strong></h2>
<%= simple_form_for @goal do |c| %>
    <%= c.input :title, label:"Titulo:",label_html: { class: "form-label fw-bold" }, required: false%>
    <%= c.input :description, label: "Descripción:",label_html: { class: "form-label fw-bold" },required: false%>
    <%= c.input :status, label:"Estado:",label_html: { class: "form-label fw-bold" },required: false%>
    <%= c.input :start_date, label:"Fecha de inicio:", html5: true,label_html: { class: "form-label fw-bold" },required: false%>
    <%= c.input :finish_date, label:"Fecha de termino:", html5: true,label_html: { class: "form-label fw-bold" },required: false%>
    <%= c.input :amount, label:"Monto:",label_html: { class: "form-label fw-bold" },required: false%>
    <%= c.button :submit, "Crear", class: "btn-success w-100" %>
     <div class="text-center mt-3">
      <%= link_to "Cancelar", goals_path,
      class: "text-muted small text-decoration-none"%>
    </div>
 <% end %>
</div>
