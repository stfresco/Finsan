<div class="container w-25 border shadow mt-5 p-3">
<h2 class="text-center"><strong>Iniciar sesion</strong></h2>

<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-inputs">
    <%= f.input :email,
                required: false,
                autofocus: true,
                input_html: { autocomplete: "email" } %>
    <%= f.input :password,
                required: false,
                input_html: { autocomplete: "current-password", label: "contraseÃ±a" } %>
    <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
  </div>

  <div class="form-actions">

    <%= f.button :submit, "Iniciar Sesion", class:"btn-success w-100"  %>

  

  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>
