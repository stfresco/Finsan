<div class="container w-25 border shadow mt-5 p-3">
   <h2 class="text-center "><strong>Crea tu objetivo! 📈 </strong>🧑🏼‍💻</h2>
<%= simple_form_for @goal do |c| %>
    <%= c.input :title%>
    <%= c.input :description%>
    <%= c.input :status%>
    <%= c.input :start_date, as: :string,
            input_html: { data: { controller: "datepicker" } }%>
    <%= c.input :finish_date, as: :string,
            input_html: { data: { controller: "datepicker" } }%>
    <%= c.input :amount%>
    <a href="<%= login_path %>" class="btn btn-orange btn-sm">Atras</a> | <%=c.submit %>
 <% end %>
</div>
