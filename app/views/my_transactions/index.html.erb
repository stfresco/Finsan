<%= turbo_frame_tag :transaction do %>

<div class="content-with-navbar-spacing">
    <table class="table table-striped">
     <thead>
       <tr>
         <th scope="col">Categoria</th>
         <th scope="col">Monto</th>
         <th scope="col">Fecha</th>
         <th scope="col">Tipo-Transaci√≥n</th>
         <th scope="col">Acciones</th>
       </tr>
     </thead>
     <tbody>
     <% @transactions.each do |t|  %>
       <tr>
         <td><%= t.category %></td>
         <td><%= t.amount %></td>
         <td><%= t.date %></td>
         <td><%= t.mytransaction_type %></td>
         <td><%= link_to edit_my_transaction_path(account_id: t.account_id, id: t.id), class: "btn btn-secondary btn-sm" do %>
          <i class="fas fa-pencil-alt"></i>
          <% end %>
          |<%= link_to my_transaction_path(account_id: t.account_id, id: t.id),
            data: {
              turbo_method: :delete,
              turbo_confirm: 'Are you sure?'
            },
            class: "btn btn-danger btn-sm" do %>
             <i class="fas fa-trash"></i>
          <% end %>
          |
          <%= link_to my_transaction_path(account_id: t.account_id, id: t.id), class: "btn btn-info btn-sm" do %>
          <i class="fas fa-eye"></i>
          <% end %>
          </td>
       </tr>
     <% end %>
    </tbody>
  </table>
</div>
<% end %>
